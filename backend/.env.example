# =============================================================================
# GNB Transfer - Backend Environment Variables
# =============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit .env files with real secrets to version control
#
# For deployment, set these as environment variables in:
# - Vercel: Project Settings → Environment Variables
# - Render: Dashboard → Environment → Environment Variables
# - GitHub Actions: Repository Settings → Secrets and variables → Actions
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED VARIABLES (Server will fail to start without these in production)
# -----------------------------------------------------------------------------

# MongoDB Connection String
# Get from MongoDB Atlas: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
MONGO_URI=

# JWT Secret for authentication tokens
# CRITICAL: Use a strong, random string (at least 64 characters)
# Generate with: openssl rand -base64 64 | tr -d '\n'
# In development, server will auto-generate if not set (tokens invalidated on restart)
JWT_SECRET=

# CORS Allowed Origins (comma-separated)
# Development: http://localhost:5173,http://localhost:3000
# Production: https://your-domain.com,https://www.your-domain.com
CORS_ORIGINS=

# -----------------------------------------------------------------------------
# OPTIONAL SECRETS (Features disabled if not set)
# -----------------------------------------------------------------------------

# Stripe Payment Integration
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# OpenAI API Key (for AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google OAuth (for social login)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple Sign-In (for social login)
# Get from: https://developer.apple.com/
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Session Secret (for session management)
# Generate with: openssl rand -base64 32
SESSION_SECRET=

# Sentry Error Tracking
# Get from: https://sentry.io
SENTRY_DSN=

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Choose one provider)
# -----------------------------------------------------------------------------

# Email Provider: gmail, mailtrap, or smtp
EMAIL_PROVIDER=

# Gmail Configuration
EMAIL_USER=
EMAIL_PASSWORD=

# Mailtrap Configuration (for testing)
MAILTRAP_HOST=
MAILTRAP_PORT=
MAILTRAP_USER=
MAILTRAP_PASSWORD=

# Generic SMTP Configuration
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASSWORD=

# -----------------------------------------------------------------------------
# AWS CONFIGURATION (for backups and file storage)
# -----------------------------------------------------------------------------

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BACKUP_BUCKET=
BACKUP_ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# OPTIONAL CONFIGURATION (with defaults)
# -----------------------------------------------------------------------------

# Server Configuration
NODE_ENV=development
PORT=5000

# Token Expiry
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=30d
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Password Hashing
BCRYPT_ROUNDS=10

# CORS Options
CORS_REQUIRE_ORIGIN=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
STRICT_RATE_LIMIT_MAX=5
RATE_LIMIT_WHITELIST=
SKIP_RATE_LIMIT=false

# Proxy Configuration (set to true if behind nginx, CloudFlare, etc.)
TRUST_PROXY=false

# Logging
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
DEBUG=false

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Cache
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_PAYMENT=true

# Monitoring URLs
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173
SLACK_WEBHOOK_URL=

# Analytics
GA_MEASUREMENT_ID=
CLARITY_PROJECT_ID=

# External APIs
ORS_API_KEY=

# Socket.IO
SOCKET_PORT=3001

# Miscellaneous
API_VERSION=v1
TZ=UTC
