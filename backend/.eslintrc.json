{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "import/extensions": ["error", "ignorePackages"],
    "no-underscore-dangle": ["error", { "allow": ["_id", "__v"] }],
    "consistent-return": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}
