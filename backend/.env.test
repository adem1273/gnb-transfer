# Test Environment Configuration
# This file is used for running automated tests

NODE_ENV=test
PORT=5001

# Test Database Configuration
# Use a separate test database to avoid affecting production/development data
MONGO_URI=mongodb://localhost:27017/gnb-transfer-test

# Authentication
JWT_SECRET=test-jwt-secret-key-for-automated-testing
JWT_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Stripe Payment Configuration (use test keys)
STRIPE_SECRET_KEY=sk_test_51234567890abcdef
STRIPE_WEBHOOK_SECRET=whsec_test_1234567890

# OpenAI Configuration (optional for tests)
OPENAI_API_KEY=sk-test-openai-key

# Logging Configuration
LOG_LEVEL=error
ENABLE_FILE_LOGGING=false

# Sentry Error Tracking (disabled for tests)
SENTRY_DSN=

# Email Configuration (disabled for tests)
EMAIL_PROVIDER=
EMAIL_USER=
EMAIL_PASSWORD=

# Rate Limiting (relaxed for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Session Configuration
SESSION_SECRET=test-session-secret

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Feature Flags
ENABLE_AI_FEATURES=false
ENABLE_ANALYTICS=false
ENABLE_PAYMENT=false

# Debug Mode
DEBUG=false

# API Versioning
API_VERSION=v1

# Timezone
TZ=UTC
